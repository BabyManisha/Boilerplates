<%- include("header") -%>

  <div class="box" id="heading">
    <h1> Todos </h1>
  </div>

  <div class="box todo-list">

    <% todos.forEach(function(todo, index){ %>
      <form action="/user/delete" method="post">
        <div class="item">
          <input type="checkbox" name="index" value="<%=index%>" onChange="this.form.submit()">
          <p><%=todo%></p>
        </div>
      </form>
    <%  }) %>

    <form class="item" action="/user/" method="post">
      <input type="text" name="newItem" placeholder="New Todo" autocomplete="off" required>
      <button type="submit" name="list">+</button>
    </form>

  </div>

  <div class="logout">
    <a href="/logout">Logout</a>
  </div>

<%- include("footer") -%>
